<div class="column">
    <nav class="panel">
        <p class="panel-heading">Who to follow</p>
        <% @users.each do |x| %>
            <div class="panel-block">
                <article class="media">
                    <div class="media-left">
                        <figure class="image is-32x32">
                            <img src="https://bulma.io/images/placeholders/32x32.png" alt="No Image Located">
                        </figure>
                    </div>
                    <div class="media-content">
                        <div class="content">
                            <p>
                                <strong><%= x.name %></strong><br>
                                <small><%= x.username %></small>
                            </p>
                        </div>
                    </div>
                </article>
            </div>
        <% end %>
    </nav>
</div>